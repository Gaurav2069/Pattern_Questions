//pyramid pattern 5

A 
B B 
C C C 
D D D D 
E E E E E 

#include<iostream>
using namespace std;
int main(){

    cout<<"Enter the number"<<endl;
    int n;
    cin>>n;

    int i=1;
    char c='A';
    while(i<=n){
        int j=1;
        while(j<=i){
            cout<<c<<" ";
            j=j+1;
        }
        cout<<endl;
        c=c+1;
        i=i+1;
    }
    return 0;
}
